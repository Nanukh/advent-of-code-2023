{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2023"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,  
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true // Tell ts-node CLI to install the --loader automatically
  },
  "include": ["src/main.ts"],
  "exclude": ["build"]
}